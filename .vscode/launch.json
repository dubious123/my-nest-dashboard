{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\src\\boards\\boards.controller.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node-terminal",
      "name": "Run Script: lint",
      "request": "launch",
      "command": "npm run lint",
      "cwd": "${workspaceFolder}"
    }
  ]
}
